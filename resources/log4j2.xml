<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
    <Appenders>
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="%d{HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n"/>
        </Console>
    </Appenders>
    <Loggers>
        <Logger name="com.tstrait21.reddit.Main" level="trace" additivity="false">
            <AppenderRef ref="Console"/>
        </Logger>
        <Logger name="com.tstrait21.reddit.RedditDAO" level="trace" additivity="false">
            <AppenderRef ref="Console"/>
        </Logger>
        <Logger name="com.tstrait21.reddit.XmlParser" level="trace" additivity="false">
            <AppenderRef ref="Console"/>
        </Logger>
        <Logger name="com.tstrait21.reddit.Keywords" level="trace" additivity="false">
            <AppenderRef ref="Console"/>
        </Logger>
        <Root level="error">
            <AppenderRef ref="Console"/>
        </Root>
    </Loggers>
</Configuration>